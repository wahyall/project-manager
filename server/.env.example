# Server
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/yn-project-manager

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Client URL (untuk CORS)
CLIENT_URL=http://localhost:3000

# App URL (untuk link di notifikasi)
APP_BASE_URL=http://localhost:3000

# Email (Nodemailer SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=YN Project Manager <noreply@ynpm.com>

# WhatsApp (Baileys)
WHATSAPP_ENABLED=false
WHATSAPP_AUTH_DIR=./auth_info

# Puter.js
PUTER_API_KEY=your-puter-api-key
